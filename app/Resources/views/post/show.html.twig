{% extends 'base.html.twig' %}

{% block body %}

    <div class="page-header">
        <h1>Post</h1>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-bordered table-striped table-condensed">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ post.name }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ post.content }}</td>
                </tr>
                <tr>
                    <th>Filename</th>
                    <td>{{ post.filename }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <img src="{{ asset(post.file.pathname) }}" width="300">
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <a class="btn btn-default" href="{{ path('post_index') }}">Back to the list</a>
            <a class="btn btn-info" href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
            <div class="display-inline">
                {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

{% endblock %}
